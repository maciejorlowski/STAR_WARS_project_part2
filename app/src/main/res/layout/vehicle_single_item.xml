<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp">
            <ImageView
                    android:id="@+id/vehicle_image_view"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"/>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicle_name"
                    android:layout_toRightOf="@id/vehicle_image_view"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>
            <TextView
                    android:text="@string/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicle_model"
                    android:layout_below="@id/vehicle_name"
                    android:layout_toRightOf="@id/vehicle_image_view"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vehicle_model_label"
                    android:layout_below="@id/vehicle_name"
                    android:layout_toRightOf="@id/vehicle_model"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>
            <Button
                    android:text="@string/more_button"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/vehicle_model"
                    android:id="@+id/vehicle_more_button"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="@dimen/margin_top"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>