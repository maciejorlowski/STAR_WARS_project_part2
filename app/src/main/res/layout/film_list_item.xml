<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/semiTransparent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp">
            <ImageView
                    android:id="@+id/film_image_view"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"/>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/film_title"
                    android:layout_toRightOf="@id/film_image_view"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>
            <TextView
                    android:text="@string/director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/film_director"
                    android:layout_below="@id/film_title"
                    android:layout_toRightOf="@id/film_image_view"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>
            <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/film_director_label"
                    android:layout_below="@id/film_title"
                    android:layout_toRightOf="@id/film_director"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:layout_marginTop="@dimen/margin_top"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>