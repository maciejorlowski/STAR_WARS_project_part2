<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp">
        <ImageView
                android:id="@+id/fav_vehicle_image"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fav_vehicle_name"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/fav_vehicle_image"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="@string/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_delete_fav"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/fav_vehicle_name"
                app:layout_constraintStart_toEndOf="@+id/fav_vehicle_name" android:layout_marginStart="64dp"/>
        <Button
                android:text="@string/more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_more_fav"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/fav_vehicle_name"
                app:layout_constraintStart_toEndOf="@+id/button_delete_fav" android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>