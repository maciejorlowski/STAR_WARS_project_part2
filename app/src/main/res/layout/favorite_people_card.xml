<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp">
        <ImageView
                android:id="@+id/fav_people_image"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/fav_people_image"
                app:layout_constraintStart_toEndOf="@+id/fav_people_image"
                android:layout_marginStart="8dp"
                android:id="@+id/people_fav_name"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_delete_fav"
                android:layout_alignParentEnd="true"
                app:layout_constraintStart_toEndOf="@+id/people_fav_name"
                android:layout_marginStart="64dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/people_fav_name"/>
        <Button
                android:text="@string/more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_more_fav"
                app:layout_constraintStart_toEndOf="@+id/button_delete_fav"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/people_fav_name"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

