<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@drawable/milky_way">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/endGameLayout"
            android:layout_width="match_parent"
            android:layout_height="511dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:text="TextView"
                android:layout_width="365dp"
                android:layout_height="137dp" android:id="@+id/resultTextView" android:textSize="36sp"
                android:textStyle="bold" android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/milk_white"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:id="@+id/playAgainButton"
                android:layout_width="286dp"
                android:layout_height="208dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="48dp"
                android:onClick="playAgain"
                android:text="Zagraj Ponownie"
                android:textSize="50sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.976"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:visibility="visible"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/gameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp">

        <TextView
                android:text="~~ DODKNIJ ABY KONTYNUOWAĆ GRĘ ~~"
                android:textColor="@color/milk_white"
                android:layout_width="299dp"
                android:layout_height="36dp" android:id="@+id/keepPlayingTextView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="italic" android:visibility="invisible"/>
        <GridLayout
                android:id="@+id/scoreGridLayout"
                android:layout_width="300dp"
                android:layout_height="71dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.514">

            <ImageButton
                    android:id="@+id/r2_d2_button0"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:tag="0"
                    android:background="@drawable/white_transparent_r2"
            />
            <ImageButton
                    android:id="@+id/r2_d2_button1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:tag="1"
                    android:background="@drawable/white_transparent_r2"
            />
            <ImageButton
                    android:id="@+id/r2_d2_button2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:tag="2"
                    android:background="@drawable/white_transparent_r2"
            />
            <ImageButton
                    android:id="@+id/r2_d2_button3"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:tag="3"
                    android:background="@drawable/white_transparent_r2"
            />
            <ImageButton
                    android:id="@+id/r2_d2_button4"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:tag="4"
                    android:background="@drawable/white_transparent_r2"
            />
            <ImageButton
                    android:id="@+id/r2_d2_button5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:tag="5"
                    android:background="@drawable/white_transparent_r2"
            />


        </GridLayout>
        <TextView
                android:id="@+id/questionTextView"
                android:layout_width="296dp"
                android:layout_height="136dp"
                android:layout_marginTop="8dp"
                android:padding="15dp"
                android:text="31+12"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="#250d0c0c"
                tools:textColor="#000000" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/gridLayout" app:layout_constraintVertical_bias="0.923"
                android:textColor="@color/dialog_background" android:textAlignment="center" android:textStyle="bold"
        />

        <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="340dp"
                android:layout_height="261dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintVertical_bias="0.769"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <Button
                    android:id="@+id/button0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:tag="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:background="@drawable/edit_round"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="Button"
                    android:textSize="11sp"


                    android:textAlignment="center"/>

            <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="4dp"
                    android:tag="1"
                    android:background="@drawable/edit_round"
                    android:text="Button"
                    android:textSize="11sp"


                    android:textAlignment="center"/>

            <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/edit_round"
                    android:tag="2"
                    android:text="Button"
                    android:textSize="11sp"


                    android:textAlignment="center"/>

            <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"

                    android:background="@drawable/edit_round"
                    android:tag="3"
                    android:text="Button"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"


                    android:textAlignment="center"/>
        </GridLayout>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="333dp"
                android:layout_height="39dp"
                android:progressTint="@color/basic_text"
                android:secondaryProgressTint="@color/juicy_green"
                android:progress="100"
                android:id="@+id/progressBar" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:visibility="visible"/>
    </android.support.constraint.ConstraintLayout>

    <Button
            android:id="@+id/startButton"
            android:layout_width="271dp"
            android:background="@drawable/edit_round"
            android:layout_height="185dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="10dp"
            android:text="Zacznij Test!"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>